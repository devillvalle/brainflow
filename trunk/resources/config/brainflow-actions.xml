<?xml version="1.0" encoding="UTF-8"?>

<action-set id="brainflow-actions">
    <action-list id="main-menu">
        <action id="main-open"
                name="Open"
                mnemonic="O"
                accel="control L"
                desc="Load and display an image"
                smicon="/resources/icons/folderOpen.png"/>
        <action id="main-remount"
                name="Remount"
                mnemonic="R"
                accel="control M"
                desc="Remount a directory"/>
        <action id="main-exit"
                name="Exit"
                mnemonic="E"
                accel="control X"
                actionClass="com.brainflow.actions.ExitApplicationAction"
                desc="Exits the application"/>
    </action-list>
    <action-list id="view-menu">
        <action id="view-sagittal"
                name="sagittal"
                mnemonic="S"
                accel="control S"
                smicon="/resources/icons/sagit_16.png"
                actionClass="com.brainflow.actions.CreateSagittalViewAction"
                desc="Creates a new sagittal image view">
        </action>
        <action id="view-coronal"
                name="coronal"
                mnemonic="C"
                accel="control C"
                smicon="/resources/icons/coronal_16.png"
                actionClass="com.brainflow.actions.CreateCoronalViewAction"
                desc="Creates a new coronal image view">
        </action>
        <action id="view-axial"
                name="axial"
                mnemonic="A"
                accel="control A"
                smicon="/resources/icons/axial_16.png"
                actionClass="com.brainflow.actions.CreateAxialViewAction"
                desc="Creates a new axial image view">
        </action>
        <action id="view-orthogonal"
                name="orthogonal"
                mnemonic="O"
                accel="control O"
                smicon="/resources/icons/bundled_obj.gif"
                actionClass="com.brainflow.actions.CreateOrthogonalViewAction"
                desc="Creates three-plane orthogonal view">
        </action>
        <action id="view-close"
                name="close"
                accel="del"
                smicon="/resources/icons/remove.png"
                actionClass="com.brainflow.actions.CloseViewAction"
                desc="Closes the current view">
        </action>
    </action-list>

    <action id="modify-colors"
            name="modify color map"
            mnemonic="D"
            accel="control P"
            actionClass="com.brainflow.actions.DesignLinearColorMapAction"
            desc="Interactively modify an existing color map">
    </action>
    <action id="set-smoothing"
            name="smoothing"
            mnemonic="K"
            accel="control K"
            actionClass="com.brainflow.actions.SmoothingAction"
            desc="Set Smoothing parameters for Gaussian blur operation">
    </action>


    <action-list id="debug-menu" name="Debug">
        <action id="view info"
                name="view info"
                mnemonic="I"
                accel="control I"
                actionClass="com.brainflow.actions.CollectInfoAction"
                desc="information about the current view">
        </action>


    </action-list>


    <action id="Unload"
            name="Unload"
            mnemonic="D"
            accel="control D"
            desc="Unload the selected image"
            actionClass="com.brainflow.actions.UnloadImageAction"/>

</action-set>